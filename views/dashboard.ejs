    <link rel="stylesheet" href="/css/dashboard.css" />
    <script>
      $(document).ready(function () {
        $("#banUserModal").on("show.bs.modal", function (e) {
          var userId = $(e.relatedTarget).data("user-id");
          $(e.currentTarget).find('input[id="userId"]').val(userId);
        });
        $("#deleteUserModal").on("show.bs.modal", function (e) {
          userId = $(e.relatedTarget).data("user-id");
          $(e.currentTarget).find('input[id="userId"]').val(userId);
        });
        $("#deleteUserBtn").click(function (e) {
          $.ajax({
            url: "/dashboard/users/" + userId,
            type: "GET",
            success: function (data) {
              location.reload();
            },
          });
        });
        $("#deleteWordModal").on("show.bs.modal", function (e) {
          wordId = $(e.relatedTarget).data("word-id");
          $(e.currentTarget).find('input[id="wordId"]').val(wordId);
        });
        $("#deleteWordBtn").click(function (e) {
          $.ajax({
            url: "/dashboard/forbidden_words/" + wordId,
            type: "GET",
            success: function (data) {
              location.reload();
            },
          });
        });
        $("#editUserModal").on("show.bs.modal", function (e) {
          userId = $(e.relatedTarget).data("user-id");
          firstName = $(e.relatedTarget).data("user-first-name");
          lastName = $(e.relatedTarget).data("user-last-name");
          birthDate = $(e.relatedTarget).data("user-birth-date");
          address = $(e.relatedTarget).data("user-address");
          city = $(e.relatedTarget).data("user-city");
          country = $(e.relatedTarget).data("user-country");
          email = $(e.relatedTarget).data("user-email");

          if (birthDate) {
            var _birthDate = new Date(birthDate);
            _birthDate.setDate(_birthDate.getDate() + 1);
            $(e.currentTarget)
              .find('input[id="birthDate"]')
              .val(new Date(_birthDate).toISOString().substring(0, 10));
          }

          $(e.currentTarget).find('input[id="userId"]').val(userId);
          $(e.currentTarget).find('input[id="firstName"]').val(firstName);
          $(e.currentTarget).find('input[id="lastName"]').val(lastName);
          $(e.currentTarget).find('input[id="address"]').val(address);
          $(e.currentTarget).find('input[id="city"]').val(city);
          $(e.currentTarget).find('input[id="country"]').val(country);
          $(e.currentTarget).find('input[id="email"]').val(email);
        });

        $("#editLectureModal").on("show.bs.modal", function (e) {
          id = $(e.relatedTarget).data("lecture-id");
          code = $(e.relatedTarget).data("lecture-code");
          name = $(e.relatedTarget).data("lecture-name");
          startDate = $(e.relatedTarget).data("lecture-start-date");
          endDate = $(e.relatedTarget).data("lecture-end-date");
          startTime = $(e.relatedTarget).data("lecture-start-time");
          schedule = $(e.relatedTarget).data("lecture-schedule");
          duration = $(e.relatedTarget).data("lecture-duration");

          var _startDate = new Date(startDate);
          _startDate.setDate(_startDate.getDate() + 1);

          var _endDate = new Date(endDate);
          _endDate.setDate(_endDate.getDate() + 1);

          $(e.currentTarget).find('input[id="id"]').val(id);
          $(e.currentTarget).find('input[id="code"]').val(code);
          $(e.currentTarget).find('input[id="name"]').val(name);
          $(e.currentTarget)
            .find('input[id="startDate"]')
            .val(new Date(_startDate).toISOString().substring(0, 10));
          $(e.currentTarget)
            .find('input[id="endDate"]')
            .val(new Date(_endDate).toISOString().substring(0, 10));
          $(e.currentTarget).find('input[id="startTime"]').val(startTime);
          $(e.currentTarget).find('select[id="schedule"]').val(schedule);
          $(e.currentTarget).find('input[id="duration"]').val(duration);
        });

        $("#deleteLectureModal").on("show.bs.modal", function (e) {
          lectureId = $(e.relatedTarget).data("lecture-id");
          scheduledLectureId = $(e.relatedTarget).data("scheduled-lecture-id");
        });

        $("#deleteLectureBtn").click(function (e) {
          $.ajax({
            url:
              "/dashboard/lectures/" +
              lectureId +
              "/scheduled/" +
              scheduledLectureId,
            type: "GET",
            success: function (data) {
              location.reload();
            },
          });
        });

        $(".alert")
          .delay(2000)
          .slideUp(200, function () {
            $(this).alert("close");
          });
      });
    </script>
  </head>
